<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
  <persistence-unit name="ParkingSystem">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <jta-data-source>java:/PostgresDS</jta-data-source>
    <class>agh.soa.dziemich.krzeelzb.entities.Employee</class>
    <class>agh.soa.dziemich.krzeelzb.entities.ParkingPlace</class>
    <class>agh.soa.dziemich.krzeelzb.entities.Parkometer</class>
    <class>agh.soa.dziemich.krzeelzb.entities.SubZone</class>
    <class>agh.soa.dziemich.krzeelzb.entities.Zone</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
      <property name="hibernate.archive.autodetection" value="class" />
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>
</persistence>
